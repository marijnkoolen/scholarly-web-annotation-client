{
    "targetObserverClass": "annotation-target-observer",
    "services" : {
        "AnnotationServer": {
            "api": "http://localhost:3000/api"
        },
        "GTAA": {
            "api": "http://openskos.beeldengeluid.nl/api/autocomplete/",
            "params": {
                "lang": "nl"
            }
        },
        "DBpedia": {
            "api": "http://lookup.dbpedia.org/api/search.asmx/PrefixSearch?QueryClass=&MaxHits=10&QueryString="
        }
    },
    "annotationSupport" : {
        "currentQuery" : {
            "modes" : ["bookmark"]
        },
        "singleItem" : {
            "modes" : ["bookmark"]
        },
        "mediaObject" : {
            "modes" : ["classify", "comment", "link"]
        },
        "mediaSegment" : {
            "modes" : ["classify", "comment", "link"]
        },
        "annotation" : {
            "modes" : ["comment"]
        }
    },
    "annotationTasks" : {
        "bookmark" : {
            "type": "bookmark",
            "purpose": "bookmarking"
        },
        "classify" : {
            "type": "classification",
            "purpose": "classifying",
            "format": "text/plain",
            "vocabularies" : [
                "DBpedia",
                "GTAA"
            ]
        },
        "comment" : {
            "type": "comment",
            "purpose": "commenting",
            "format": "text/plain"
        },
        "correct" : {
            "type": "correction",
            "purpose": "correcting",
            "format": "text/plain"
        },
        "link" : {
            "type": "link",
            "purpose": "linking",
            "format": "text/plain",
            "apis" : [
                {"name" : "wikidata"},
                {"name" : "europeana"}
            ]
        },
        "tag": {
            "type": "tag",
            "purpose": "tagging",
            "format": "text/plain",
            "specifies": "classify"
        },
        "transcribe" : {
            "type": "transcription",
            "purpose": "transcribing",
            "format": "text/plain"
        }
    },
    "defaults": {
        "target": ["BenG_Program", "BenG_Season", "BenG_Series", "Genre", "Movie", "Title", "Summary", "Broadcaster", "BroadcastDate"]
    }
}

