{
    "targetObserver": {
        "targetObserverClass": "annotation-target-observer",
        "observeMutations": true,
        "observerConfig": {
            "childList": true,
            "attributes": false,
            "subtree": true
        }
    },
    "services" : {
        "AnnotationServer": {
            "api": "http://localhost:3000/api"
        },
        "GTAA": {
            "api": "http://openskos.beeldengeluid.nl/api/autocomplete/?q=",
            "params": {
                "lang": "nl"
            }
        },
        "DBpedia": {
            "api": "http://lookup.dbpedia.org/api/search.asmx/PrefixSearch?QueryClass=&MaxHits=10&QueryString="
        },
        "GeoNames": {
            "api": "http://api.geonames.org/search?maxRows=10&type=json&username=&name_startsWith=",
            "params": {
                "username": "my-username"
            }
        },
        "UNESCO": {
            "api": "http://vocabularies.unesco.org/browser/rest/v1/search?vocab=thesaurus&lang=en&labellang=en&maxhits=10&query=",
            "addWildcard": true
        }
    },
    "annotationSupport" : {
        "currentQuery" : {
            "modes" : ["bookmark"]
        },
        "singleItem" : {
            "modes" : ["bookmark"]
        },
        "mediaObject" : {
            "modes" : ["classify", "comment", "link"]
        },
        "mediaSegment" : {
            "modes" : ["classify", "comment", "link"]
        },
        "annotation" : {
            "modes" : ["comment"]
        }
    },
    "annotationTasks" : {
        "bookmark" : {
            "type": "bookmark",
            "purpose": "bookmarking"
        },
        "classify" : {
            "type": "classification",
            "purpose": "classifying",
            "format": "text/plain",
            "vocabularies" : [
                "DBpedia",
                "GTAA",
                "UNESCO"
            ]
        },
        "comment" : {
            "type": "comment",
            "purpose": "commenting",
            "format": "text/plain"
        },
        "correct" : {
            "type": "correction",
            "purpose": "correcting",
            "format": "text/plain"
        },
        "link" : {
            "type": "link",
            "purpose": "linking",
            "format": "text/plain",
            "apis" : [
                {"name" : "wikidata"},
                {"name" : "europeana"}
            ]
        },
        "tag": {
            "type": "tag",
            "purpose": "tagging",
            "format": "text/plain",
            "specifies": "classify"
        },
        "transcribe" : {
            "type": "transcription",
            "purpose": "transcribing",
            "format": "text/plain"
        }
    },
    "defaults": {
        "target": ["ParagraphInLetter", "Note", "LocationNote", "SourceNote"]
    }
}
